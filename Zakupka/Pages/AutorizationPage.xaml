<Page x:Class="Zakupka.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zakupka"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorizationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Логин" Margin="5"/>
            <TextBox Margin="5" Name="logBox"/>
            <TextBlock Text="Пароль" Margin="5"/>
            <TextBox x:Name="textPassBox" Margin="5" Visibility="Collapsed"/>
            <PasswordBox Margin="5" Name="passBox"/>
            <StackPanel Margin="0 5 0 5" Orientation="Horizontal">
                <CheckBox Margin="4 0 0 0" Name="passCheck" Click="passCheck_Click"/>
                <TextBlock Margin="10 0 0 0" Text="Показать/скрыть пароль"/>
            </StackPanel>
            
            <Button Content="Войти" Name="btnGo" Click="btnGo_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
